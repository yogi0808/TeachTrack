<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SessionFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sessionListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        />

    <TextView
        android:id="@+id/emptyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No sessions available"
        android:textSize="18sp"
        android:textColor="@color/text_placeholder"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addSessionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:rippleColor="@color/secondary"
        android:layout_margin="16dp"
        android:backgroundTint="@color/primary"
        android:contentDescription="Add Session"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="@color/white"
        app:elevation="8dp"
        />
</FrameLayout>